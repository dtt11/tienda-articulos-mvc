@{
    ViewData["Title"] = "Inicio - Tienda MVC";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="#">Tienda MVC</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Productos" asp-action="Index">Productos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero principal -->
    <section class="bg-light py-5">
        <div class="container text-center">
            <h1 class="display-4 fw-bold">Bienvenido a Tienda MVC</h1>
            <p class="lead">Una aplicación ASP.NET Core MVC para administrar tu catálogo de productos.</p>
            <a asp-controller="Productos" asp-action="Index" class="btn btn-primary btn-lg mt-3">
                <i class="fas fa-store me-2"></i> Ver productos
            </a>
        </div>
    </section>

    <!-- Características -->
    <section class="container my-5">
        <div class="row g-4 text-center">
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <i class="fas fa-plus-circle fa-3x text-success mb-3"></i>
                        <h4>Crear productos</h4>
                        <p>Agrega nuevos productos con imágenes, descripción y precios fácilmente.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <i class="fas fa-edit fa-3x text-warning mb-3"></i>
                        <h4>Editar productos</h4>
                        <p>Actualiza la información de tus productos de manera sencilla y rápida.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <i class="fas fa-trash-alt fa-3x text-danger mb-3"></i>
                        <h4>Eliminar productos</h4>
                        <p>Elimina productos que ya no forman parte de tu inventario.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4">
        <div class="container text-center">
            <p class="mb-0">&copy; @DateTime.Now.Year - Tienda MVC. Todos los derechos reservados.</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
