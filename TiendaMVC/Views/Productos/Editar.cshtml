@model ProductoDto
@{
}


<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3">
		<h2 class="text-center mb-5">Editar Producto</h2>
	</div>

	<form method="post" enctype="multipart/form-data">

		<div class="row mb-3">
			<label class="col-sm-4 col-form-label">Id</label>
			<div class="col-sm-8">
				<input class="form-control-plaintext" readonly value="@ViewData["ProductoId"]">
			</div>
		</div>

		<div class="row mb-3">
			<label class="col-sm-4 col-form-label">Nombre</label>
			<div class="col-sm-8">
				<input class="form-control" asp-for="Nombre">
				<span asp-validation-for="Nombre" class="text-danger"></span>
			</div>
		</div>

		<div class="row mb-3">
			<label class="col-sm-4 col-form-label">Marca</label>
			<div class="col-sm-8">
				<input class="form-control" asp-for="Marca">
				<span asp-validation-for="Marca" class="text-danger"></span>
			</div>
		</div>

		<div class="row mb-3">
			<label class="col-sm-4 col-form-label">Categoría</label>
			<div class="col-sm-8">
				<select class="form-select" asp-for="Categoria">
					<option value="Otros">Otros...</option>
					<option value="Computadoras">Computadoras</option>
					<option value="Consolas">Consolas</option>
					<option value="Accesorios">Accesorios</option>
					<option value="Lavadoras">Lavadoras</option>
					<option value="Tablets">Tablets</option>
				</select>
			</div>
		</div>

		<div class="row mb-3">
			<label class="col-sm-4 col-form-label">Precio</label>
			<div class="col-sm-8">
				<input class="form-control" asp-for="Precio">
				<span asp-validation-for="Precio" class="text-danger"></span>
			</div>
		</div>

		<div class="row mb-3">
			<label class="col-sm-4 col-form-label">Descripcion</label>
			<div class="col-sm-8">
				<input class="form-control" asp-for="Descripcion">
				<span asp-validation-for="Descripcion" class="text-danger"></span>
			</div>
		</div>

		<div class="row mb-3">
			<div class="offset-sm-4 col-sm-8">
				<img src="/ImagenesProductos/@ViewData["ProductoImagen"]" width="150">
			</div>
		</div>

		<div class="row mb-3">
			<label class="col-sm-4 col-form-label">Imagen</label>
			<div class="col-sm-8">
				<input class="form-control" asp-for="ProductoImagen">
				<span asp-validation-for="ProductoImagen" class="text-danger"></span>
			</div>
		</div>

		<div class="row mb-3">
			<label class="col-sm-4 col-form-label">Fecha</label>
			<div class="col-sm-8">
				<input class="form-control-plaintext" readonly value="@ViewData["Fecha"]">
			</div>
		</div>





		<div class="row">
			<div class="offset-sm-4 col-sm-4 d-grid">
				<button type="submit" class="btn btn-primary">Guardar</button>
			</div>
			<div class="col-sm-4 d-grid">
				<a class="btn btn-outline-primary" asp-controller="Productos" asp-action="Index" role="button">
					Cancelar
				</a>
			</div>
		</div>


	</form>

</div>